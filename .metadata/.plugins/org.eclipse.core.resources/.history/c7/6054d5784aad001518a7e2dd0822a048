	import java.awt.*;
	import java.awt.event.KeyEvent;

	import javax.swing.ImageIcon;

	public class Character {
		int x, dx, y, dy;
		Image still;
		String color;


		public Character() {
			
			//if(this.color == "blue"){
				ImageIcon i = new ImageIcon("C:\\Users\\Lenovo\\workspace\\sss\\src\\blue.gif");
				still = i.getImage();	
			//}
			/*else if(color == "green"){
				ImageIcon i = new ImageIcon("C:\\Users\\Lenovo\\workspace\\sss\\src\\green.gif");
				still = i.getImage();	
			}
			else if(color == "red"){
				ImageIcon i = new ImageIcon("C:\\Users\\Lenovo\\workspace\\sss\\src\\red.gif");
				still = i.getImage();	
			}*/
		
			 x = 650;
			 y = 350;
		}

		public void horizontalMove() {
			x = x + dx;
		}
		public void verticalMove(){
			y = y + dy;
		}

		public int getX() {
			return x;
		}

		public int getY() {
			return y;
		}
		
		public void setColor(String color){
			this.color = color;
		}
		
		public String getColor(){
			return color;
		}

		public Image getImage() {
			return still;
		}

		public void keyPressed(KeyEvent e) {
			int key = e.getKeyCode();
			if (key == KeyEvent.VK_A)
				dx = -1;
			if (key == KeyEvent.VK_D)
				dx = 1;
			if (key == KeyEvent.VK_S)
				dy = 1;
			if (key == KeyEvent.VK_W)
				dy = -1;
		}

		public void keyReleased(KeyEvent e) {
			int key = e.getKeyCode();
			if (key == KeyEvent.VK_A)
				dx = 0;
			if (key == KeyEvent.VK_D)
				dx = 0;
			if (key == KeyEvent.VK_S)
				dy = 0;
			if (key == KeyEvent.VK_W)
				dy = 0;
		}

	}